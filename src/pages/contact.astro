---
import { Container } from "@components/Container";
import { ContentSection } from "@blocks/ContentSection";
import Layout from "../layouts/Layout.astro";

const title = "Contact";
const description = "Contactez-nous pour toute question ou information complémentaire.";
---

<Layout title={title} description={description}>
    <main>
        <ContentSection>
            <h1 class="text-4xl font-bold tracking-tight text-secondary sm:text-6xl">
                {title}
            </h1>
            <p class="mt-6 text-lg leading-8 text-secondary opacity-50">
                {description}
            </p>
        </ContentSection>

        <section class="py-20">
            <Container>
                <div class="max-w-3xl mx-auto">
                    <div class="bg-white p-8 rounded-lg shadow-sm">
                        <form class="space-y-6">
                            <!-- Informations personnelles -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label for="nom" class="block text-sm font-medium text-secondary mb-2">
                                        Nom
                                    </label>
                                    <input
                                        type="text"
                                        id="nom"
                                        name="nom"
                                        required
                                        class="w-full px-4 py-2 border border-gray-300 rounded-sm focus:ring-2 focus:ring-tertiary focus:border-transparent"
                                        placeholder="Votre nom"
                                    />
                                </div>
                                <div>
                                    <label for="prenom" class="block text-sm font-medium text-secondary mb-2">
                                        Prénom
                                    </label>
                                    <input
                                        type="text"
                                        id="prenom"
                                        name="prenom"
                                        required
                                        class="w-full px-4 py-2 border border-gray-300 rounded-sm focus:ring-2 focus:ring-tertiary focus:border-transparent"
                                        placeholder="Votre prénom"
                                    />
                                </div>
                            </div>

                            <!-- Coordonnées -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label for="email" class="block text-sm font-medium text-secondary mb-2">
                                        Email
                                    </label>
                                    <input
                                        type="email"
                                        id="email"
                                        name="email"
                                        required
                                        class="w-full px-4 py-2 border border-gray-300 rounded-sm focus:ring-2 focus:ring-tertiary focus:border-transparent"
                                        placeholder="votre@email.com"
                                    />
                                </div>
                                <div>
                                    <label for="telephone" class="block text-sm font-medium text-secondary mb-2">
                                        Téléphone
                                    </label>
                                    <input
                                        type="tel"
                                        id="telephone"
                                        name="telephone"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-sm focus:ring-2 focus:ring-tertiary focus:border-transparent"
                                        placeholder="Votre numéro de téléphone"
                                    />
                                </div>
                            </div>

                            <!-- Adresse -->
                            <div>
                                <label for="adresse" class="block text-sm font-medium text-secondary mb-2">
                                    Adresse
                                </label>
                                <input
                                    type="text"
                                    id="adresse"
                                    name="adresse"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-sm focus:ring-2 focus:ring-tertiary focus:border-transparent"
                                    placeholder="Votre adresse complète"
                                />
                            </div>

                            <!-- Type de contact -->
                            <div>
                                <label for="type" class="block text-sm font-medium text-secondary mb-2">
                                    Type de contact
                                </label>
                                <select
                                    id="type"
                                    name="type"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-sm focus:ring-2 focus:ring-tertiary focus:border-transparent"
                                >
                                    <option value="">Sélectionnez un type de contact</option>
                                    <option value="information">Demande d&apos;information</option>
                                    <option value="soutien">Demande de soutien</option>                                  
                                    <option value="autre">Autre</option>
                                </select>
                            </div>

                            <!-- Message -->
                            <div>
                                <label for="message" class="block text-sm font-medium text-secondary mb-2">
                                    Message
                                </label>
                                <textarea
                                    id="message"
                                    name="message"
                                    rows="6"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-sm focus:ring-2 focus:ring-tertiary focus:border-transparent"
                                    placeholder="Votre message..."
                                ></textarea>
                            </div>

                            <!-- Bouton d'envoi -->
                            <div class="flex justify-center">
                                <button
                                    type="submit"
                                    class="inline-flex items-center justify-center border border-transparent rounded-sm leading-snug transition duration-150 ease-in-out text-primary hover:text-white bg-tertiary hover:bg-opacity-50 font-medium p-3 px-6 text-base relative cursor-pointer"
                                >
                                    Envoyer le message
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </Container>
        </section>
    </main>
</Layout> 