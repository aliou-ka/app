import { Testimonials } from "@blocks/Testimonials";
import { ImageContent } from "@blocks/ImageContent";
---

<Layout title="Assucly" description="YOUR META DESCRIPTION FOR SEO">
    <main class="page-content w-full overflow-x-hidden min-w-full">
        <div class="w-full max-w-[100vw]">
            <Hero
                heroType="contentImage"
                data={{
                    label: `Devenir un partenaire `,
                 
                    description: `​L'Association des Usagers du Chauffage Urbain du Grand Lyon (ASSUCLY), fondée en 2009, a pour mission de démocratiser les connaissances sur le fonctionnement et les avantages des réseaux de chaleur. Elle s'engage à diffuser ces informations auprès des copropriétés et à accompagner les résidents dans leur appropriation de ces systèmes. Le chauffage urbain est en effet un enjeu stratégique, mais sa complexité nécessite une meilleure compréhension collective.`,
                    image: "lyon",
                    button: {
                        text: "en savoir plus",
                        link: "/docs",
                        variant: "primary",
                    },
                }}
            />
            <!--
            <Logos
                data={{
                    title: "Trusted by the world's best companies",
                    logos: ["logo1", "logo2", "logo3", "logo4"],
                }}
            />
            -->
            <Service
                data={{
                    aboveTitle: "Nos Services",
                    title: "Découvrez notre large éventail de services",
                    description: "",
                    services: [
                        {
                            title: "Représentation active des usagers auprès du Grand Lyon",
                            description:
                                "A developper",
                            icon: "cloud",
                        },
                        {
                            title: "Accompagnement personnalisé pour optimiser votre consommation d'énergie",
                            description:
                                "A developper",
                            icon: "lock",
